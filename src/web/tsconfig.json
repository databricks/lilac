{
  "compilerOptions": {
    "target": "ES2020",
    // So webpack can tree-shake.
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "jsx": "react-jsx",
    "lib": ["dom", "es2022"],
    "outDir": "dist",
    "declaration": true,
    "types": ["jest", "@testing-library/jest-dom"],
    // Type roots are defined here to add CSS modules.
    "typeRoots": ["./node_modules/@types/", "./src/@types"]
  }
}
